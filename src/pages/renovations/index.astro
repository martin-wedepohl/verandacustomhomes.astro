---
import Layout from "../../layouts/Layout.astro";
import Carousel from "../../components/Carousel.astro";
import Contact from "../../components/Contact.astro";

const images = [
  { src: "knowles-residence-stairs-down-before-after-medium-veranda-custom-homes.jpg", alt: "Knowles Stairs Renovation", full: "knowles-residence-stairs-down-before-after-veranda-custom-homes.jpg", style: "object-position: right", width: 256, height: 171 },
  { src: "knowles-residence-stairs-up-before-after-medium-veranda-custom-homes.jpg", alt: "Knowles Stairs Renovation", full: "knowles-residence-stairs-up-before-after-veranda-custom-homes.jpg", style: "object-position: right", width: 256, height: 171 },
  { src: "knowles-residence-stairs-top-before-after-medium-veranda-custom-homes.jpg", alt: "Knowles Stairs Renovation", full: "knowles-residence-stairs-top-before-after-veranda-custom-homes.jpg", style: "object-position: right", width: 256, height: 171 },
  { src: "knowles-residence-kitchen-before-after-medium-veranda-custom-homes.jpg", alt: "Knowles Kitchen Renovation", full: "knowles-residence-kitchen-before-after-veranda-custom-homes.jpg", style: "object-position: left", width: 256, height: 171 },
  { src: "knowles-residence-fireplace-before-after-medium-veranda-custom-homes.jpg", alt: "Knowles Fireplace Renovation", full: "knowles-residence-fireplace-before-after-veranda-custom-homes.jpg", style: "object-position: right", width: 256, height: 171 },
