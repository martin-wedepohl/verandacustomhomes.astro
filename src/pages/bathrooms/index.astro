const path = "/images/bathrooms/";

const title = "Veranda Custom Homes - Bathrooms";
const description = "Veranda Custom Homes knows bathrooms are a greaty place to start to bring things up to current syles and technologies";
---
<Layout title={title}, description={description} >
    <main id="main-content" style="position:relative;">
      <section class="container">
        <h1 class="heading-3 padding-block-start-6">{title}</h1>
        <p class="margin-block-end-6">
          This is a great place to start to bring things up to current style as well as latest technologies. 
          Weâ€™ve worked with many systems and styles in this ever changing market and requirements.
        </p>
        <p class="margin-block-end-6">
          View our portfolio of bathroom new builds and renovations below.
        </p>    
      </section>
      <Carousel>
        {images.map(image => (
          <div class="carousel-item">
            <img src={path + image.src} alt={image.alt} data-full={path + image.full} class="carousel-img" loading="lazy" width={image.width} height={image.height} />
          </div>
        ))}
      </Carousel>
      <Contact />
    </main>
</Layout>

<style>
  .carousel-item {
    display: grid;
    justify-content: center;
    align-items: center;
  }

  .carousel-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    cursor: zoom-in;
  }
</style>
