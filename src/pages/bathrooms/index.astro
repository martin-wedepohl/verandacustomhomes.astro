---
import Layout from "../../layouts/Layout.astro";
import Carousel from "../../components/Carousel.astro";
import Contact from "../../components/Contact.astro";

const images = [
  { src: "bathroom-renovations-vancouver-1-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-renovations-vancouver-1-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "bathroom-renovations-vancouver-2-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-renovations-vancouver-2-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "bathroom-renovations-vancouver-3-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-renovations-vancouver-3-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "bathroom-renovations-vancouver-4-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-renovations-vancouver-4-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "bathroom-renovations-vancouver-5-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-renovations-vancouver-5-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "bathroom-renovations-vancouver-6-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-renovations-vancouver-6-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "bathroom-reno-1-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-reno-1-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "bathroom-reno-2-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-reno-2-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "bathroom-reno-3-medium-veranda-custom-homes.jpg", alt: "Bathroom Renovation", full: "bathroom-reno-3-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "knowles-residence-bathroom-medium-veranda-custom-homes.jpg", alt: "Knowles Residence Bathroom Renovation", full: "knowles-residence-bathroom-veranda-custom-homes.jpg", width: 114, height: 171 },
  { src: "knowles-residence-bath-medium-veranda-custom-homes.jpg", alt: "Knowles Residence Bathroom Renovation", full: "knowles-residence-bath-veranda-custom-homes.jpg", width: 114, height: 171 },
];

const path = "/images/bathrooms/";
---
<Layout
	title="Veranda Custom Homes - Bathrooms",
	description="Looking for a custom home builder or bathroom renovation expert that you can fully trust? We have years of proven construction experience in the Vancouver, BC area."
>
    <main id="main-content" style="position:relative;">
      <Carousel>
        {images.map(image => (
          <div class="carousel-item">
            <img src={path + image.src} alt={image.alt} data-full={path + image.full} class="carousel-img" loading="lazy" width={image.width} height={image.height} />
          </div>
        ))}
      </Carousel>
      <Contact />
    </main>
</Layout>

<style>
  .carousel-item {
    display: grid;
    justify-content: center;
    align-items: center;
  }

  .carousel-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    cursor: zoom-in;
  }
</style>
