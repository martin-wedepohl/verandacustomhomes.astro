const path = "/images/kitchens/";

const title = "Veranda Custom Homes - Kitchens";
const description = "Veranda Custom Homes knows you’ll be spending a great amount of your time in the kitchen. We focus durability and style into a great family meeting area.";
---
<Layout title={title}, description={description} >
    <main id="main-content" style="position:relative;">
      <section class="container">
        <h1 class="heading-3 padding-block-start-6">{title}</h1>
        <p class="margin-block-end-6">
          This is an area where we understand you’ll be spending a great amount of your time. 
          This is where we focus durability and style into a great family meeting area.
        </p>
        <p class="margin-block-end-6">
          View our portfolio of kitchen new builds and renovations below.
        </p>    
      </section>
      <Carousel>
        {images.map(image => (
          <div class="carousel-item">
            <img src={path + image.src} alt={image.alt} data-full={path + image.full} class="carousel-img" loading="lazy" width={image.width} height={image.height} />
          </div>
        ))}
      </Carousel>
      <Contact />
    </main>
</Layout>

<style>
  .carousel-item {
    display: grid;
    justify-content: center;
    align-items: center;
  }

  .carousel-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    cursor: zoom-in;
  }
</style>
