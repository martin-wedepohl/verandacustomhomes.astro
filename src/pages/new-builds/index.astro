---
import Layout from "../../layouts/Layout.astro";
import Carousel from "../../components/Carousel.astro";
import Contact from "../../components/Contact.astro";

const images = [
  { src: "new-build-medium-veranda-custom-homes.jpg", alt: "Custom Built Home", full: "new-build-veranda-custom-homes.jpg", width: 256, height: 144 },
  { src: "new-build-1-medium-veranda-custom-homes.jpg", alt: "Custom Built Home", full: "new-build-1-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "new-build-2-medium-veranda-custom-homes.jpg", alt: "Custom Built Home", full: "new-build-2-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "new-build-3-medium-veranda-custom-homes.jpg", alt: "Custom Built Home", full: "new-build-3-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "new-build-4-medium-veranda-custom-homes.jpg", alt: "Custom Built Home", full: "new-build-4-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "new-build-5-medium-veranda-custom-homes.jpg", alt: "Custom Built Home", full: "new-build-5-veranda-custom-homes.jpg", width: 256, height: 171 },
  { src: "new-build-6-medium-veranda-custom-homes.jpg", alt: "Custom Built Home", full: "new-build-6-veranda-custom-homes.jpg", width: 256, height: 171 },
];

const path = "/images/new-builds/";

const startYear = 1993;
const today = new Date();
const years = today.getFullYear() - startYear;

const title = "Veranda Custom Homes - New Builds";
const description = `Veranda Custom Homes has spent {years}yrs combining our interests to bring you the experience and insight necessary to custom build new homes.`;
---
<Layout title={title}, description={description} >
    <main id="main-content" style="position:relative;">
      <section class="container">
        <h1 class="heading-3 padding-block-start-6">{title}</h1>
        <p class="margin-block-end-6">
          Weâ€™ve spent {years}yrs combining our interests to bring you the experience and insight necessary to build. 
          Cultivated relationships with trades who share in our desire to build to last. 
        </p>
        <p class="margin-block-end-6">
          View our portfolio of custom home new builds below.
        </p>    
      </section>
      <Carousel>
        {images.map(image => (
          <div class="carousel-item">
            <img src={path + image.src} alt={image.alt} data-full={path + image.full} class="carousel-img" loading="lazy" width={image.width} height={image.height} />
          </div>
        ))}
      </Carousel>
      <Contact />
    </main>
</Layout>

<style>
  .carousel-item {
    display: grid;
    justify-content: center;
    align-items: center;
  }

  .carousel-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    cursor: zoom-in;
  }
</style>
